<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorPrimary"
        >
        <ImageView
            android:id="@+id/ivTopQuset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_contact2"
            />

        <TextView
            android:id="@+id/toolbar_title"
            android:text="CONTACT INFORMATION"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font20"
            android:textColor="@color/white"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/margin5"
            android:layout_weight="1"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/ll_group_contact"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/margin10">
            <TextView
                android:id="@+id/lb1"
                android:text="24 hour Switch Board"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font16"
                android:gravity="left"
                android:textColor="@color/black"
                android:layout_marginLeft="@dimen/margin10"
                android:layout_marginRight="@dimen/margin10"
                android:layout_marginTop="@dimen/margin10"
                android:layout_marginBottom="@dimen/margin5"/>

            <TextView
                android:id="@+id/callSwitchBoard"
                android:text="4537 3267"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font18"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@drawable/btn_phone"
                android:layout_marginLeft="@dimen/margin10"
                android:layout_marginRight="@dimen/margin10"
                android:layout_marginTop="@dimen/margin5"
                android:layout_marginBottom="@dimen/margin5"/>
            <TextView
                android:id="@+id/lb2"
                android:text="Day Surgery unit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font16"
                android:gravity="left"
                android:textColor="@color/black"
                android:layout_marginLeft="@dimen/margin10"
                android:layout_marginRight="@dimen/margin10"
                android:layout_marginTop="@dimen/margin15"
                android:layout_marginBottom="@dimen/margin5"/>

            <TextView
                android:id="@+id/callSurgeryUnit"
                android:text="4537 3267"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font18"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@drawable/btn_phone"
                android:layout_marginLeft="@dimen/margin10"
                android:layout_marginRight="@dimen/margin10"
                android:layout_marginTop="@dimen/margin5"
                android:layout_marginBottom="@dimen/margin5"/>
            <TextView
                android:id="@+id/lb3"
                android:text="Pre-admission Clinic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font16"
                android:gravity="left"
                android:textColor="@color/black"
                android:layout_marginLeft="@dimen/margin10"
                android:layout_marginRight="@dimen/margin10"
                android:layout_marginTop="@dimen/margin15"
                android:layout_marginBottom="@dimen/margin5"/>

            <TextView
                android:id="@+id/callClinic"
                android:text="4537 3267"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font18"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@drawable/btn_phone"
                android:layout_marginLeft="@dimen/margin10"
                android:layout_marginRight="@dimen/margin10"
                android:layout_marginTop="@dimen/margin5"
                android:layout_marginBottom="@dimen/margin5"/>

        </LinearLayout>

    </ScrollView>
</LinearLayout>